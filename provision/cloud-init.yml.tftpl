#cloud-config
ssh_pwauth: true
disable_root: false
password: HashiPass123!
chpasswd:
  expire: false

write_files:
  - path: /etc/mongod.conf
    defer: true
    content: |
      ${indent(6, mongod-config)}

runcmd:
  - update-ca-trust
  - systemctl daemon-reload
  - systemctl enable --now mongod.service
  - systemctl enable --now httpd.service
